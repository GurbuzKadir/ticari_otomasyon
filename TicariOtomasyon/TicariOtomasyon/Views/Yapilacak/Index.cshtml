@using TicariOtomasyon.Models.Siniflar;
@model List<Yapilacak>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yapılacaklar Listesi</h2>
<br />
<table id="tbl_todo" class="table table-hover">
    <thead>
        <tr>
            <th style="width:15px"></th>

            <th>Başlık</th>

            <th>Detay</th>

            <th>Sil</th>

            <th>Durum</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
<tr>
    @if (x.Durum == true)
    {
        <td style="color:#30dd63"><i class="fas fa-check"></i><i style="color:white;font-size:1px">ok</i></td>
    }
    else
    {
        <td style="color:#ea9022"><i class="far fa-clock"></i><i style="color:white;font-size:1px">pr</i></td>
    }

    <td>@x.Baslik</td>

    <td>@x.Detay</td>

    @*<td><a href="/Cari/CariSil/@x.CariID" class="btn btn-danger">Sil</a></td>*@
    <td>@Html.ActionLink("Sil", "YapilacakSil", new { id = x.YapilacakID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinizden emin misiniz?')" })</td>

    <td>
        @if (x.Durum == true)
        {@Html.ActionLink("Geri Al", "YapilacakGeriAl", new { id = x.YapilacakID }, new { @class = "btn btn-warning", onclick = "return confirm('Geri almak istediğinizden emin misiniz?')" })}
    else
    {@Html.ActionLink("Tamamla", "YapilacakTamamla", new { id = x.YapilacakID }, new { @class = "btn btn-success", onclick = "return confirm('Tamamlamak istediğinizden emin misiniz?')" })}
    </td>

</tr>
    }
</table>
<a href="/Yapilacak/YeniYapilacak" class="btn btn-primary">Yapılacak Ekle</a>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tbl_todo').DataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>

