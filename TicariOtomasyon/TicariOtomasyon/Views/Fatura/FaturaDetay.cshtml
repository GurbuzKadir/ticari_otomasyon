@using TicariOtomasyon.Models.Siniflar;
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.0/jquery.fancybox.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.0/jquery.fancybox.min.js"></script>
<br />
<h2>Fatura Detayları</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Fatura Kalemleri</li> 
</ol>
<br />
<table id="tbl_departman_detay" class="table table-striped">
    <thead>
        <tr>
            @*<th>#</th>*@
            <th>Açıklama</th>
            <th>Miktar</th>
            <th>Birim Fiyat</th>
            <th>Tutar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
<tr>
    @*<td>@x.FaturaKalemID</td>*@

    <td>@x.Aciklama</td>

    <td>@x.Miktar</td>

    <td>@x.BirimFiyat</td>

    <td>@x.Tutar</td>

    @*<td>@x.PersonelGorsel</td><!--görsellere bak düzenlenecek var mı-->
        <td><a data-fancybox="gallery" target="_blank" class="btn btn-dark" href="@x.PersonelGorsel">Resim</a></td><!--Burası fotoğraf popup açma kodu-->

        <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-info">Satışlar</a></td>*@
</tr>
    }

</table>

<a href="/Fatura/YeniKalem/@ViewBag.id1" class="btn btn-primary">Yeni giriş</a>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tbl_departman_detay').dataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }
    });
</script>
