@model TicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Giriş</h2>
<br />
<form class="form-group" method="post">
    <p>Açıklama</p>
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })<!--Burada otomatik olarak ÜRÜN çekme işlemi yapılacak-->

    <br />

    <p>Miktar</p>
    @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })<!--Miktar max aşım olmayacak-->

    <br />

    <p>Birim Fiyat</p>
    @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })<!--otomatik olacak-->

    <br />

    <p>Tutar</p>
    @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })<!--Miktar*fiyat-->

    <!--Burada otomatik olarak ID çekme işlemi yapılacak-->

    <br />

    <button class="btn btn-success">Kaydet</button>

</form>
<!--ürünlere fancybox eklenecek-->
