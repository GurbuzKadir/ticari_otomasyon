@model TicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Cari Bilgileri</h2>
@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
            {
<table class="table table-hover">

    <tr>

        <td>

            <label>Mail Adresi : @HttpContext.Current.User.Identity.Name</label>

        </td>
    </tr>

    <!--Bilgiler-->
    <tr>

        <td>
            <p>Ad</p>
            @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
        </td>

    </tr>

    <tr>

        <td>
            <p>Soyad</p>
            @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
        </td>

    </tr>

    <tr>

        <td>
            <p>Şehir</p>
            @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
        </td>

    </tr>

    <tr>

        <td>
            <p>Telefon</p>
            @Html.TextBoxFor(x => x.CariTelefon, new { @class = "form-control" })
        </td>

    </tr>

    <tr>

        <td>
            <p>Adres</p>
            @Html.TextBoxFor(x => x.CariAdres, new { @class = "form-control" })
        </td>

    </tr>

    <tr>

        <td>
            <p>Şifre</p>
            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @type = "password", id = "myInput" })
        <p style="margin-left:20px;margin-top:10px;font-size:1em"><input style="width:20px;height:20px" class="form-check-input" type="checkbox" onclick="myFunction()">&nbsp;&nbsp;Şifreyi göster</p>
        </td>

    </tr>
    @*@Html.HiddenFor(x => x.CariID)*@
</table>
<button class="btn btn-success">Bilgileri Güncelle</button>
            }

<script>
function myFunction() {
  var x = document.getElementById("myInput");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>