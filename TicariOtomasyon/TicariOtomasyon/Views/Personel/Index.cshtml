@using TicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.0/jquery.fancybox.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.0/jquery.fancybox.min.js"></script>
<!--Burası fotoğraf popup açma kodu-->
<br />
<table id="personel" class="table table-striped" style="margin-top:20px">
    <thead>
        <tr>
            
            @*<th>#</th>*@
            
            <th>Ad</th>
            
            <th>Soyad</th>
            
            <th>Telefon</th>
            
            <th>Adres</th>
            
            <th>Departman</th>
            
            <th>Görsel</th>
            
            <th>Sil</th>
            
            <th>Güncelle</th>
            
            <th>Satışlar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            @*<td>@k.PersonelID</td>*@

            <td>@k.PersonelAd</td>

            <td>@k.PersonelSoyad</td>

            <td>@k.PersonelTelefon</td>

            <td>@k.PersonelAdres</td>

            <td>@k.Departman.DepartmanAdi</td>

            <td><a data-fancybox="gallery" target="_blank" class="btn btn-dark" href="@k.PersonelGorsel">Resim</a></td><!--Burası fotoğraf popup açma kodu-->
            @*<td><a href="/Personel/PersonelSil/@k.PersonelID" class="btn btn-danger">Sil</a></td>*@
            <td>@Html.ActionLink("Sil", "PersonelSil", new { id = @k.PersonelID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinizden emin misiniz?')" })</td>

            <td><a href="/Personel/PersonelGetir/@k.PersonelID" class="btn btn-warning">Güncelle</a></td>

            <td><a href="/Departman/DepartmanPersonelSatis/@k.PersonelID" class="btn btn-info">Detay</a></td>

        </tr>
    }
</table>
<span>
    <a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>
    <a href="/Personel/PersonelListe" class="btn btn-dark">Personel Listesi</a>
</span>


<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#personel').dataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }
    });
</script>