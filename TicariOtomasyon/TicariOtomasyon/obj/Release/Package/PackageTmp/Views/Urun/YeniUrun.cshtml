@model TicariOtomasyon.Models.Siniflar.Urun
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Ürün</h2>
<br />
@using (Html.BeginForm("YeniUrun", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group" method="post">
        <p>Ürün adı</p>
        @Html.TextBoxFor(x => x.UrunAdi, new { @class = "form-control" })

        <br />

        <p>Marka</p>
        @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })

        <br />

        <p>Stok adedi</p>
        @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })

        <br />

        <p>Alış fiyatı</p>
        @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control" })

        <br />

        <p>Satış fiyatı</p>
        @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control" })

        <br />

        <p>Kategori</p>
        @*@Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.Kategoriid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

        <br />

        <p>Görsel</p>
        @*@Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form-control" })*@

        <input type="file" name="UrunGorsel" class="form-control" />
        <p style="color:#ff9937">Dosya sistemine yüklenen görseller sistemde büyük yer kaplar. <a href="https://compressjpeg.com/tr/" target="_blank">Buradan</a> görselleri sıkıştırıp yüklemeniz önerilir.</p>

        <p>Ürün Açıklaması</p>
        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", @id = "summernote" })
        <p style="color:#ffa5a5">Açıklama bölümüne resim eklemeniz <b>önerilmemektedir</b>.</p>

        <br />

        <p>Detay</p>
        @Html.TextAreaFor(x => x.Detay, new { @class = "form-control", @id = "summernote2" })
        <p style="color:#ffa5a5">Detaylar bölümüne resim eklemeniz <b>önerilmemektedir</b>.</p>

        <br />

        <button class="btn btn-success">Kaydet</button>

    </form>
}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
@*<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>*@
<script src="~/AdminLTE/summernote-lite.min.js"></script>

<script>
    $('#summernote').summernote({
        placeholder: 'Merhaba, burası detayların olacağı bölüm.',
        tabsize: 2,
        height: 500,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });

    $('#summernote2').summernote({
        placeholder: 'Merhaba, burası detayların olacağı bölüm.',
        tabsize: 2,
        height: 500,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });


</script>
