@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Siparişlerim</h2>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Fiyat</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model) { 
        
            <tr>
                <td>@x.Urun.UrunAdi</td>
                <td>@x.Urun.Marka</td>
                <td>@x.Fiyat</td>
                <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy") </td><!--tarihler hepsine yapılacak-->
        
            </tr>
        }
    </tbody>
</table>
