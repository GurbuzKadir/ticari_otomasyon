@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl_satis" class="table table-striped" style="margin-top:20px">
    <thead>
        <tr>
            @*<th>#</th>*@
            
            <th>Ürün</th>
            
            <th>Cari</th>
            
            <th>Personel</th>
            
            <th>Adet</th>
            
            <th>Fiyat</th>
            
            <th>Toplam</th>
            
            <th>Tarih</th>
            
            <th>Güncelle</th>
            
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            
            @*<td>@k.SatisID</td>*@
            
            <td>@k.Urun.UrunAdi</td>
            
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            
            <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
            
            <td>@k.Adet</td>
            
            <td>@k.Fiyat</td>
            
            <td>@k.ToplamTutar</td>
            
            <td>@Convert.ToDateTime(k.Tarih).ToString("dd/MM/yyyy")</td>
            
            <td><a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-warning">Güncelle</a></td><!---->
            
            <td><a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-info">Detay</a></td><!---->

        </tr>
    }
</table>
