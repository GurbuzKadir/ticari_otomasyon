@model TicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.0/jquery.fancybox.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.0/jquery.fancybox.min.js"></script>
<!--Burası fotoğraf popup açma kodu-->
<br />
<h2>Personel Güncelle</h2>
<br />
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.PersonelID)

        <p>Ad</p>
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })

        <br />

        <p>Soyad</p>
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })

        <br />

        <p>Telefon</p>
        @Html.TextBoxFor(x => x.PersonelTelefon, new { @class = "form-control", maxlength = "10", placeholder = "554321456" })

        <br />

        <p>Adres</p>
        @Html.TextBoxFor(x => x.PersonelAdres, new { @class = "form-control" })

        <br />

        <p>Görsel</p>
        @*@Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })*@
        <input type="file" name="PersonelGorsel" class="form-control" />
        <br />
        <a data-fancybox="gallery" target="_blank" class="btn btn-dark" href="@Model.PersonelGorsel.ToString()">Mevcut Görsel</a>
        <p style="color:#ff9937">Dosya sistemine yüklenen görseller sistemde büyük yer kaplar. <a href="https://compressjpeg.com/tr/" target="_blank">Buradan</a> görselleri sıkıştırıp yüklemeniz önerilir.</p>

        <p>Departman</p>
        @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

        <br />

        <button class="btn btn-success">Güncelle</button>
    </div>
}