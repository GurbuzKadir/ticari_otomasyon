@using TicariOtomasyon.Models.Siniflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="faturalar" class="table table-striped" style="margin-top:20px">
    <thead>
        <tr>
            @*<th>#</th>*@
            <th>Seri-Sıra No</th>
            <th>Vergi dairesi</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Teslim eden</th>
            <th>Teslim alan</th>
            <th>Toplam</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
<tr>

    @*<td>@k.FaturaID</td>*@

    <td>@k.FaturaSeriNo @k.FaturaSiraNo</td>

    <td>@k.VergiDairesi</td>

    <td>@Convert.ToDateTime(@k.FaturaTarih).ToString("dd/MM/yyyy")</td>

    <td>@k.FaturaSaat</td>

    <td>@k.TeslimEden</td>

    <td>@k.TeslimAlan</td>

    <td>@k.Toplam</td>

    @*<td><a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-danger">Sil</a></td>*@
    <td>
        @Html.ActionLink("Sil", "FaturaSil", new { id = k.FaturaID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinizden emin misiniz?')" })
    </td>

    <td><a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-warning">Güncelle</a></td>

    <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-info">Detay</a></td>

</tr>
    }
</table>
<span>
    <a href="/Fatura/FaturaEkle" class="btn btn-primary">Fatura Ekle</a>
</span>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#faturalar').dataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }
    });
</script>
