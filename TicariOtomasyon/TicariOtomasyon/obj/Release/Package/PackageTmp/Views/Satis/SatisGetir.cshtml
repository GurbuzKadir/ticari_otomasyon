@model TicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satış Güncelle</h2>
<br />
@using (Html.BeginForm("SatisGuncelle", "Satis", FormMethod.Post))
{
    <p>Ürün</p>
    @Html.DropDownListFor(x => x.Urunid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    
    <br />
    
    <p>Cari</p>
    @Html.DropDownListFor(x => x.Cariid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    
    <br />
    
    <p>Personel</p>
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    
    <br />
    
    <p>Adet</p>
    <input type="number" class="form-control" value="@ViewBag.dgr4" name="Adet" max="@ViewBag.dgr7" min="1" required placeholder="Adet" id="txt1" onchange="sum();" />
    
    <p style="text-align:right;color:#808080">Stok miktarı : @ViewBag.dgr7</p>
    
    <p>Fiyat</p>
    <input type="text" name="Fiyat" value="@ViewBag.dgr5" class="form-control" id="txt2" onkeyup="sum();" />
    
    <br />
    
    <p>Toplam</p>
    <input type="text" name="ToplamTutar" value="@ViewBag.dgr6" class="form-control" id="txt3" readonly />
    
    <br />
    
    <p>Tarih</p>
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control",@type="date"})<!--Burası tarih-->
    
    <br />
    
    @*<p>Tarih</p>
        @Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control" })
        @Html.DropDownListFor(x => x.Kategoriid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })*@
    <button class="btn btn-success">Güncelle</button>
    @Html.HiddenFor(x => x.SatisID)
}
<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var s1_r = sayi1.replace(",", ".");
        var s2_r = sayi2.replace(",", ".");
        var sonuc = parseFloat(s1_r) * parseFloat(s2_r);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
    }
</script>